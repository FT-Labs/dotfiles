#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.


case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

function send_notification {
  iconSound="ï’…"
  iconMuted="ï‘¦"
  if [ $(pamixer --get-mute) = true ]; then
    dunstify -r 3 -a top-center -u normal "$iconMuted    Muted"
  else
    bar=$(seq --separator="â”€" 0 "$((vol / 5))" | sed 's/[0-9]//g')
    dunstify -r 3 -a top-center -u normal "$iconSound $bar"
  fi
}

vol="$(pamixer --get-volume)"

[ $(pamixer --get-mute) = true ] && send_notification && echo ðŸ”‡ && exit

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

send_notification && echo "$iconâ€‰â€‰$vol%"
